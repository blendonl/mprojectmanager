generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model agenda {
  id          String        @id
  date        DateTime
  created_at  DateTime      @default(now())
  updated_at  DateTime
  agenda_item agenda_item[]
}

model agenda_item {
  id              String             @id
  agenda_id       String
  task_id         String?
  type            agenda_item_type   @default(TASK)
  status          agenda_item_status @default(PENDING)
  start_at        DateTime?
  duration        Int?
  position        Int                @default(0)
  notes           String?
  completed_at    DateTime?
  notification_id String?
  unfinished_at   DateTime?
  is_unfinished   Boolean            @default(false)
  created_at      DateTime           @default(now())
  updated_at      DateTime
  routine_task_id String?
  agenda          agenda             @relation(fields: [agenda_id], references: [id], onDelete: Cascade)
  routine_task    routine_task?      @relation(fields: [routine_task_id], references: [id])
  task            task?              @relation(fields: [task_id], references: [id])
}

model alarm_plan {
  id                      String            @id
  routine_task_id         String
  status                  alarm_plan_status @default(PENDING)
  type                    alarm_plan_type
  target_at               DateTime
  repeat_interval_minutes Int
  metadata                Json?
  created_at              DateTime          @default(now())
  updated_at              DateTime
  routine_task            routine_task      @relation(fields: [routine_task_id], references: [id], onDelete: Cascade)

  @@index([routine_task_id, target_at])
}

model boad {
  id          String   @id
  project_id  String
  name        String
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime
  project     project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  column      column[]
}

model column {
  id         String   @id
  board_id   String
  name       String
  color      String
  position   Int      @default(0)
  limit      Int?
  created_at DateTime @default(now())
  updated_at DateTime
  boad       boad     @relation(fields: [board_id], references: [id], onDelete: Cascade)
  task       task[]
}

model goal {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model note {
  id         String    @id
  type       note_type @default(PERSONAL)
  title      String
  content    String
  created_at DateTime  @default(now())
  updated_at DateTime
}

model project {
  id           String         @id
  name         String
  slug         String         @unique
  description  String?
  color        String         @default("#3B82F6")
  status       project_status @default(active)
  file_path    String?
  created_at   DateTime       @default(now())
  updated_at   DateTime
  task_counter Int            @default(0)
  boad         boad[]
  time_log     time_log[]
}

model routine {
  id                      String         @id
  name                    String
  status                  routine_status @default(ACTIVE)
  type                    routine_type
  target                  String
  separate_into           Int            @default(1)
  repeat_interval_minutes Int
  active_days             Json?
  created_at              DateTime       @default(now())
  updated_at              DateTime
  routine_task            routine_task[]
}

model routine_task {
  id               String             @id
  routine_id       String
  name             String
  target           String
  created_at       DateTime           @default(now())
  updated_at       DateTime
  agenda_item      agenda_item[]
  alarm_plan       alarm_plan[]
  routine          routine            @relation(fields: [routine_id], references: [id], onDelete: Cascade)
  routine_task_log routine_task_log[]
}

model routine_task_log {
  id              String       @id
  routine_task_id String
  user_id         String
  value           String?
  created_at      DateTime     @default(now())
  routine_task    routine_task @relation(fields: [routine_task_id], references: [id], onDelete: Cascade)
}

model task {
  id          String        @id
  column_id   String
  parent_id   String?
  title       String
  description String?
  position    Int           @default(0)
  type        task_type     @default(TASK)
  priority    task_priority @default(LOW)
  created_at  DateTime      @default(now())
  updated_at  DateTime
  due_At      DateTime?
  slug        String
  task_number Int
  agenda_item agenda_item[]
  column      column        @relation(fields: [column_id], references: [id], onDelete: Cascade)
  task        task?         @relation("taskTotask", fields: [parent_id], references: [id], onDelete: Cascade)
  other_task  task[]        @relation("taskTotask")
  task_log    task_log[]
  time_log    time_log[]

  @@index([slug])
}

model task_log {
  id         String      @id
  task_id    String
  action     task_action
  value      String?
  metadata   Json?
  created_at DateTime    @default(now())
  updated_at DateTime
  task       task        @relation(fields: [task_id], references: [id], onDelete: Cascade)
}

model time_log {
  id               String   @id
  project_id       String?
  task_id          String?
  date             DateTime
  duration_minutes Int
  source           String
  metadata         Json?
  created_at       DateTime @default(now())
  updated_at       DateTime
  project          project? @relation(fields: [project_id], references: [id])
  task             task?    @relation(fields: [task_id], references: [id])

  @@index([project_id, date])
  @@index([task_id])
}

enum agenda_item_status {
  PENDING
  COMPLETED
  CANCELLED
  UNFINISHED
}

enum agenda_item_type {
  TASK
  MEETING
  MILESTONE
}

enum alarm_plan_status {
  PENDING
  ACTIVE
  CANCELLED
  COMPLETED
}

enum alarm_plan_type {
  WAKE
  SLEEP
  STEP
}

enum note_type {
  PERSONAL
  WORK
  STUDY
  MEETING
  PROJECT
  TASK
}

enum project_status {
  active
  archived
  completed
}

enum routine_status {
  ACTIVE
  DISABLED
}

enum routine_type {
  SLEEP
  STEP
  OTHER
}

enum task_action {
  CREATED
  MOVE_TO_IN_PROGRESS
  MOVE_TO_DONE
  MOVED_TO_COLUMN
  PRIORITY_CHANGED
  ASSIGNED
  UNASSIGNED
  COMPLETED
  REOPENED
}

enum task_priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum task_type {
  TASK
  SUBTASK
  MEETING
}
